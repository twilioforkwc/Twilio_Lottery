<% extend 'layout' %>
<h1><%= @title %></h1>
<p><%= @title %>へようこそ</p>
<form id="the_form" method="POST" action="/number?_csrf=<%= @csrf %>" enctype="multipart/form-data">
  <input id="csrf" type="hidden" name="_csrf" value="<%= @csrf %>" />  
  <select id="phone_number" name="phone_number">
    <%- @options %>
  </select>
  <br />
  <textarea id="voice_text" name="voice_text" placeholder="応答"></textarea><br />
  <input type="file" name="voice_file" id="voice_file" />MP3<br />
  <button id="tmp_button">動作試験</button>
  <button id="submit_button">利用開始</button>
</form>

